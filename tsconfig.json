{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@features/*": ["app/features/*"],
      "@navigation/*": ["app/navigation/*"],
      "@layouts/*": ["app/layouts/*"],
      "@styles/*": ["app/styles/*"],
      "@assets/*": ["app/assets/*"]
    }
  },
  "include": ["app/**/*"]
}
